@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Users";
}

<h2>Users</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @if (!item.IsAdmin)
                    {
                        <a asp-action="MakeAdmin" asp-route-id="@item.UserName">Make Administrator</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
